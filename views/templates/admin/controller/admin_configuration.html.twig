{% extends '@PrestaShop/Admin/layout.html.twig' %}

{# PrestaShop made some modifications to the way forms are displayed to work well with PrestaShop in order to benefit from those you need to use ui kit as theme#}
{% form_theme protectimagesConfigurationForm '@PrestaShop/Admin/TwigTemplateForm/prestashop_ui_kit.html.twig' %}

{% block content %}
    {{ form_start(protectimagesConfigurationForm) }}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">settings</i> {{ 'Proctect images'|trans({}, 'Modules.Msd_protectimages.Form') }}
        </h3>
        <div class="card-body">
            <div class="form-wrapper">
                {{ form_widget(protectimagesConfigurationForm) }}
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end">
                <button class="btn btn-primary float-right" id="save-button">
                    {{ 'Save'|trans({}, 'Admin.Actions') }}
                </button>
            </div>
        </div>
    </div>
    {{ form_end(protectimagesConfigurationForm) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
